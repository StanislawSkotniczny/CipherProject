@using BlazorBootstrap
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CipherProject</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="caesarcipher">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Caesar Cipher
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="polybiuscipher">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Polybius Cipher
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="trithemiuscipher">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Thritemius Cipher
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="vigenerecipher">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Vigenère Cipher
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="playfaircipher">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Playfair Cipher
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
